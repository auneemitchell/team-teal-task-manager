{
	"name": "task-manager",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint .",
		"preview": "npm run build && wrangler pages dev",
		"deploy": "npm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types",
		"cf:migrate:test": "npx wrangler d1 migrations apply cf_db --remote",
		"cf:migrate:prod": "npx wrangler d1 migrations apply cf_db --remote --env production",
		"migrate:local": "node ./scripts/migrate"
	},
	"dependencies": {
		"better-sqlite3": "^12.6.2",
		"fs": "^0.0.1-security",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"vite": "^7.1.2",
		"wrangler": "^4.59.3"
	}
}
